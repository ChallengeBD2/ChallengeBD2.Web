@model ChallengeBD2.WebPage.Models.NuvemPalavras
@{

}

<style>
    span {
        padding: 0;
        z-index: 0;
        position: relative;
        word-spacing: normal;
        letter-spacing: normal;
        text-decoration: none;
        text-transform: none;
        text-align: center;
        text-indent: 0ex;
    }

    .TermoPositivo {
        color: lightgreen;
    }

    .TermoNegativo {
        color: red;
    }

    #palavra1 {
        font-size: 39pt;
    }

    #palavra2 {
        font-size:44pt;
    }

    #palavra3 {
        font-size: 30pt;
    }

    #palavra4 {
        font-size:47pt;
    }

    #palavra5 {
        font-size: 26pt;
    }

    #palavra6 {
        font-size: 30pt;
    }

    #palavra7 {
        font-size: 38pt;
    }


    #palavra8 {
        font-size: 27pt;
    }

    #palavra9 {
        font-size: 36pt;
    }

    #palavra10 {
        font-size: 35pt;
    }

    #palavra11 {
        font-size: 40pt;
    }

    #palavra12 {
        font-size: 15pt;
    }

    #palavra13 {
        font-size: 40pt;
    }

    #palavra14 {
        font-size: 50pt;
    }

    #palavra15 {
        font-size: 21pt;
    }

    #palavra16 {
        font-size: 20pt;
    }
</style>
<h2>Nuvem de Palavras - @ViewBag.Title</h2>

<div class="container" style="margin-top:50pt; line-height:280%">
    @if (Model != null)
    {
        int PularLinha = 0;

        for (int i = 0; i < @Model.Palavras.Count; i++)
        {
            if (PularLinha == 8)
            {
                <br />
                PularLinha = 0;
            }

            <samp class="@Model.Palavras[i].AvaliacaoTermo" style="@(String.Format("font-size:{0}", @Model.Palavras[i].TamanhoPalavra))">@Model.Palavras[i].Termo</samp>

            //style = "font-size:@Model.Palavras[i].TamanhoPalavra"
            PularLinha++;
        }
    }
</div>
